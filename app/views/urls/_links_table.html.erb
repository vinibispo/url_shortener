<section class="flex justify-center my-4">
  <table class="w-3/4 bg-white border border-gray-300 m-1">
    <thead>
      <tr>
        <th class="px-6 py-3 bg-gray-100 border-b border-gray-300 text-left"><%= t('.short') %></th>
        <th class="px-6 py-3 bg-gray-100 border-b border-gray-300 text-left hidden md:table-cell"><%= t('.original') %></th>
        <th class="px-6 py-3 bg-gray-100 border-b border-gray-300 text-center hidden md:table-cell"><%= t('.date') %></th>
        <th class="px-6 py-3 bg-gray-100 border-b border-gray-300 text-center hidden md:table-cell"><%= t('.copy') %></th>
        <th class="px-6 py-3 bg-gray-100 border-b border-gray-300 text-left md:hidden"></th>
      </tr>
    </thead>
    <tbody id="urls">
      <% links.each do |link| %>
        <%= render 'urls/link', link: %>
      <% end %>
    </tbody>
  </table>
</section>
<div class="flex align-center justify-center mt-4 mb-4">
  <%== pagy_nav @pagy %>
</div>
