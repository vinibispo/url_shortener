<tr data-controller="clipboard" class="<%= cycle('bg-gray-50', 'bg-white') %>"  data-clipboard-supported-class="clipboard--supported" data-clipboard-unsupported-class="clipboard--unsupported">
  <td class="px-6 py-4 whitespace-nowrap">
    <%= link_to link.short_url, link.short_url, class: "text-blue-600 visited:text-purple-600", target: "_blank", rel: "noreferrer", data: { 'clipboard-target': 'source' } %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap">
    <%= truncate(link.original) %>
  </td>
  <td class="px-6 py-4 text-center whitespace-nowrap">
    <time datetime="<%= link.timestamp %>"><%= link.formatted_date %></time>
  </td>
  <td class="px-6 py-4 text-center whitespace-nowrap">
    <%= link.clicks %>
  <td class="px-6 py-4 text-center whitespace-nowrap" data-copy="true">
    <button data-action="clipboard#copy" class="clipboard-button">
      📋
    </button>
  </td>
  <td class="px-6 py-4 text-center whitespace-nowrap">
    <%= link_to edit_account_url_path(link.short), data: { turbo_frame: "modal" } do %>
      ✏️
    <% end %>
  </td>
</tr>
